<% content_for :page_specific_javascript_late do %>
  <%= javascript_include_tag "registration.js.coffee" %>
<% end %>

<h2>Sign up</h2>

<%= form_tag(user_registration_path,:method => 'post') %>
<%= devise_error_messages! %>
<table>

  <tr>
    <td>Username : </td>
    <td><%=text_field_tag "user[username]",@user.username %></td>
  </tr>

  <tr>
    <td>Email : </td>
    <td><%=email_field_tag "user[email]",@user.email %></td>
  </tr>

  <tr>
    <td>Password : </td>
    <td><%=password_field_tag "user[password]",@user.password %></td>
  </tr>

  <tr>
    <td>Retype password : </td>
    <td><%=password_field_tag "user[password_confirmation]",@user.password_confirmation %></td>
  </tr>

  <tr>
    <td>Name : </td>
    <td><%=text_field_tag "hotel[name]" ,@hotel.name %></td>
  </tr>

  <tr>
    <td>Description : </td>
    <td><%=text_area_tag "hotel[description]" ,@hotel.description ,:rows => 10, :cols => 25 %></td>
  </tr>

  <tr>
    <td><%= submit_tag "Sign up", :class => "form_submit"%></td>
  </tr>
</table>
<br />
<%= render :partial => "devise/shared/links" %>