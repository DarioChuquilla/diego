
<h1>Listing hotels</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hotels.each do |hotel| %>
  <tr>
    <td><%= hotel.name %></td>
    <td><%= hotel.description %></td>
    <td><%= hotel.latitude %></td>
    <td><%= hotel.longitude %></td>
    <td><%= link_to 'Show', admin_hotel_path(hotel) %></td>
    <td><%= link_to 'Edit', edit_admin_hotel_path(hotel) %></td>
    <td><%= link_to 'Destroy', admin_hotel_path(hotel), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

