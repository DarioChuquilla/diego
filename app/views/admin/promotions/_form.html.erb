<%= form_for [:admin, @hotel, @promotion] do |f| %>

<% if @promotion.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@promotion.errors.count, "error") %> prohibited this promotion from being saved:</h2>

  <ul>
    <% @promotion.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<%= image_tag(@promotion.photo_url) if @promotion.photo? %>

<div class="field">
  <%= f.file_field :photo %>
</div>

<div class="actions">
  <div data-role="controlgroup" data-mini="true" data-type="horizontal">
    <%= f.submit %>
    <% if @promotion.photo.present? %>
      <%= link_to t("admin.labels.show"), admin_hotel_promotion_path(@hotel, @promotion), data: {role: "button"} %>
    <% end %>
    <%= link_to 'Back', admin_hotel_promotions_path(@hotel), data: {role: "button"} %>
  </div>
</div>
<% end %>
