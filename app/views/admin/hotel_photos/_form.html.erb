<%= form_for [:admin, @hotel, @hotel_photo], :url => admin_hotel_photos_path(@hotel), :html => {:multipart => true} do |f| %>
<% if @hotel_photo.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@hotel_photo.errors.count, "error") %> prohibited this hotel_photo from being saved:</h2>

  <ul>
    <% @hotel_photo.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= image_tag(@hotel_photo.photo_url) if @hotel_photo.photo? %>

<div class="field">
  <%= f.file_field :photo %>
</div>

<div class="actions">
  <div data-role="controlgroup" data-mini="true" data-type="horizontal">
    <%= f.submit %>
    <% if @hotel_photo.photo.present? %>
      <%= link_to 'Show', admin_hotel_photo_path(@hotel, @hotel_photo), data: {role: "button"} %>
    <% end %>
    <%= link_to 'Back', admin_hotel_photos_path(@hotel), data: {role: "button"} %>
  </div>
</div>
<% end %>
