<%= render :partial => 'links', :locals => { :hotel => @hotel } %>
<p id="notice"><%= notice %></p>

<%#= image_tag(@hotel_photo.photo.main.url) if @hotel_photo.photo? %>

<img sizes="(min-width: 40em) 80vw, 100vw"
srcset="<%= @hotel_photo.photo.main.url %> 375w, <%= @hotel_photo.photo.logo.url %> 480w, <%= @hotel_photo.photo.banner.url %> 600w, <%= @hotel_photo.photo_url %> 768w" 
alt="hotel image" />

<div data-role="controlgroup" data-mini="true" data-type="horizontal">
<%= link_to 'Edit', edit_admin_hotel_photo_path(@hotel, @hotel_photo), data: {role: "button"} %>
<%= link_to 'Back', admin_hotel_photos_path(@hotel), data: {role: "button"} %>
</div>
