<% content_for :title do %>
  <%= @hotel.name %>
<% end %>
<div class="slider">
  <% @hotel.hotel_photos.each_with_index do |photo, index| %>
  <%= image_tag(photo.photo.main.url) if photo.photo? %>
  <% end %>
</div>
<h3><%= @hotel.name %></h3>
<%= simple_format @hotel.description %>

<table class="ui-responsive" id="hotel-rooms">
  <thead>
    <tr>
      <th data-priority="7">Available</th>
      <th data-priority="7">Room</th>
      <th data-priority="7">Price</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>2</td>
      <td>Carmelo</td>
      <td>$ 50.00</td>
    </tr>
    <tr>
      <td>2</td>
      <td>Carmelo</td>
      <td>$ 50.00</td>
    </tr>
    <tr>
      <td>2</td>
      <td>Carmelo</td>
      <td>$ 50.00</td>
    </tr>
    <tr>
      <td>2</td>
      <td>Carmelo</td>
      <td>$ 50.00</td>
    </tr>
  </tbody>
</table>
<% if @hotel.promotions.present? %>
  <div class="slider">
    <% @hotel.promotions.each_with_index do |promotion, index| %>
    <%= image_tag(promotion.photo.banner.url, data:{'plugin-slide-caption' => promotion.name}) if promotion.photo? %>
    <% end %>
  </div>
<% end %>
<iframe width="100%" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=Quito%2C%20Pichincha%2C%20Ecuador&key=AIzaSyDXGufBORq45JOUYe3Kc_bG87r-9skTr3w"></iframe>
<ul data-role="listview">
  <li><%= link_to "Comments", "#" %></li>
  <li><%= link_to "Reserve", "#" %></li>
</ul>