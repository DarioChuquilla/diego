<% content_for :page_specific_javascript_early do %>
  <%= javascript_include_tag "registration.js.coffee" %>
<% end %>

<h2><%= t "home.sign_in" %> NEW</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<% flash.each do |name, msg| %>
<p><%= content_tag :div, msg, :id => "flash_#{name}", :style => "font-size: 14px; color: #FE2300;" %></p>
<% end %>

<div>
  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true %>
</div>

<div>
  <%= f.label :password %>
  <%= f.password_field :password, autocomplete: "off" %>
</div>

<% if devise_mapping.rememberable? -%>
<div>
  <%= f.check_box :remember_me %> <%= f.label :remember_me %>
</div>
<% end -%>

<div><%= f.submit t("home.forms.sign_in") %></div>
<% end %>

<%= render "devise/shared/links" %>
